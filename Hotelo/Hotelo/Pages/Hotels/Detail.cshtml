@page "{HotelId:int}"

@model Hotelo.Pages.Hotels.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h2>@Model.Hotel.Name</h2>

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<div>
    Id: @Model.Hotel.Id
</div>
<div>
    Location: @Model.Hotel.Location
</div>
<div>
    Cuisine: @Model.Hotel.Cuisine
</div>

<a asp-page="./List" class="btn btn-default">All Hotels</a>
